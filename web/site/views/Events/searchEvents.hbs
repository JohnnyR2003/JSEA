<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <style>
    .topnav {
      overflow: hidden;
      background-color: #333;
    }

    .topnav a {
      float: left;
      display: block;
      color: #f2f2f2;
      text-align: center;
      padding: 14px 16px;
      text-decoration: none;
      font-size: 17px;
    }

    .topnav a:hover {
      background-color: #ddd;
      color: black;
    }

    .topnav a.active {
      background-color: #128189;
      color: white;
    }

    .topnav .icon {
      display: none;
    }

    @media screen and (max-width: 600px) {
      .topnav a:not(:first-child) {
        display: none;
      }

      .topnav a.icon {
        float: right;
        display: block;
      }
    }

    @media screen and (max-width: 600px) {
      .topnav.responsive {
        position: relative;
      }

      .topnav.responsive .icon {
        position: absolute;
        right: 0;
        top: 0;
      }

      .topnav.responsive a {
        float: none;
        display: block;
        text-align: left;
      }
    }

    .event-list {
      margin-top: 20px;
    }

    .event-card {
      background-color: #444;
      border: 1px solid #128189;
      color: white;
    }

    .event-card a {
      color: #128189;
      text-decoration: none;
    }

    .event-card a:hover {
      color: #ddd;
    }

    .event-card .btn-primary {
      color: white;
    }

    .pagination .page-link {
      margin: 0 5px;
      padding: 10px 15px;
      border: none;
      text-decoration: none;
      color: #fff;
      background: #128189; /* Darker color on hover */ /* Matching gradient background */
      border-radius: 5px; /* Rounded corners for a modern look */
    }

    .pagination .page-link:hover {
      background: #fff;; /* Darker color on hover */
      color: #128189; /* Matching gradient background */
    }

    .event-card {
  background-color: #444;
  border: 1px solid #128189;
  color: white;
  height: 300px; /* Fixed height */
  width: 100%; /* Ensure it fits the column */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

    .event-card .card-title {
  white-space: nowrap; /* Prevent text from wrapping */
  overflow: hidden; /* Hide overflowed text */
  text-overflow: ellipsis; /* Add ellipsis (...) for overflowed text */
}

    .event-card .card-body {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

    .event-card .card-text {
  flex-grow: 1; /* Take up remaining space */
}

.event-card {
  background-color: #444;
  border: 1px solid #128189;
  color: white;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.event-card .card-body {
  flex: 1 1 auto; /* Allow the body to grow */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.event-card .card-title {
  white-space: nowrap; /* Prevent text from wrapping */
  overflow: hidden; /* Hide overflowed text */
  text-overflow: ellipsis; /* Add ellipsis (...) for overflowed text */
}

.event-card .card-text {
  flex-grow: 1; /* Take up remaining space */
}

.event-card .card-img-top {
  width: 100%; /* Full width of the card */
  height: auto; /* Maintain aspect ratio */
  object-fit: cover; /* Cover the card area */
}



  </style>
  <title>Search Events</title>
</head>
<body>
  <!-- Navigation -->
  <div class="topnav" id="myTopnav">
    {{#unless flag}}
    <a href="./home">Home</a>
    {{else}}
    <a href="../private/Userhome">Home</a>
    {{/unless}}
    <a href="./popularEvents">Get the Top Events</a>
    <a href="./searchEvents" class="active">Search an Event</a>
    {{#unless flag}}
    <a href="../private/register">Register</a>
    <a href="../private/login">Login</a>
    {{else}}
    <a href="../private/logout" onclick="confirm('Are you sure you want to log out?')">Logout</a>
    {{/unless}}
    <a href="javascript:void(0);" class="icon" onclick="toggleNav()">
      <i class="fa fa-bars"></i>
    </a>
  </div>

  <!-- Search Form -->
  <form action="./searchEvents" method="GET" class="bg-dark text-light p-3">
    <div class="container">
      <div class="row">
        <div class="col">
          <input type="text" id="eventName" name="eventName" value="{{eventNameQueryParam}}" class="form-control" placeholder="Search for an event...">
        </div>
        <div class="col">
          <input type="number" id="limit" name="limit" value="{{limitQueryParam}}" class="form-control" placeholder="Enter limit">
        </div>
        <div class="col">
          <input type="number" id="page" name="page" value="{{pageQueryParam}}" class="form-control" placeholder="Enter page">
        </div>
        <div class="col">
          <button type="submit" class="btn btn-outline-primary">Search</button>
        </div>
      </div>
    </div>
  </form>

  <!-- Event List -->
  <section class="bg-dark text-light p-5">
  <div class="container event-list">
    {{#unless hasSearched}}
      <h1 class="mb-4">Here are the Events</h1>
    {{/unless}}
    {{#if hasSearched}}
      <h1 class="mb-4">Here are the events you searched for:</h1>
    {{/if}}
    <div class="row">
      {{#unless searchedEvents}}
      <div class="col-12">
        <div class="alert alert-warning" role="alert">
          No events found for this page or limit too high.
        </div>
      </div>
      {{/unless}}
      {{#each searchedEvents}}
      <div class="col-md-4 mb-4">
          <div class="card event-card">
            <img src="{{this.image}}" class="card-img-top" alt="Event Image"> <!-- Image moved outside of card-body -->
            <div class="card-body">
              <h5 class="card-title">{{this.name}}</h5>
              <p class="card-text">{{this.date}}</p>
              <a href="/site/public/oneEvent/{{this.id}}" class="btn btn-primary">Details</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>



  <!-- Pagination -->
  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center bg-dark">
      <li class="page-item">
        <a class="page-link" href="#" id="prevPage" onclick="prevPage()">&lt; Previous</a>
      </li>
      {{#each pages}}
      <li class="page-item"><a class="page-link" href="./searchEvents?page={{this.number}}" onclick="updateContent({{this.number}})">{{this.number}}</a></li>
      {{/each}}
      <li class="page-item">
        <a class="page-link" href="#" id="nextPage" onclick="nextPage()">Next &gt;</a>
      </li>
    </ul>
  </nav>

  <script>
    const totalPages = 99;

    function getQueryParam(name) {
      const urlParams = new URLSearchParams(window.location.search);
      return urlParams.get(name);
    }

    const pageQueryParam = getQueryParam('page');
    let currentPage = pageQueryParam ? parseInt(pageQueryParam) : 1;
    let limitQueryParam = getQueryParam('limit');
    let eventNameQueryParam = getQueryParam('eventName');

    function updateContent(page) {
      console.log(`Fetching content for page ${page}`);
      window.location.href = `./searchEvents?page=${page}&limit=${limitQueryParam}&eventName=${eventNameQueryParam}`;
    }

    function nextPage() {
      if (currentPage < totalPages) {
        currentPage++;
        updateContent(currentPage);
      }
    }

    function prevPage() {
      if (currentPage > 1) {
        currentPage--;
        updateContent(currentPage);
      }
    }

    function toggleNav() {
      var x = document.getElementById("myTopnav");
      if (x.className === "topnav") {
        x.className += " responsive";
      } else {
        x.className = "topnav";
      }
    }
  </script>
</body>
</html>
