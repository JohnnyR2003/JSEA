<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <style>
    .topnav {
      overflow: hidden;
      background-color: #333;
    }

    .topnav a {
      float: left;
      display: block;
      color: #f2f2f2;
      text-align: center;
      padding: 14px 16px;
      text-decoration: none;
      font-size: 17px;
    }

    .topnav a:hover {
      background-color: #ddd;
      color: black;
    }

    .topnav a.active {
      background-color: #128189;
      color: white;
    }

    .topnav .icon {
      display: none;
    }

    @media screen and (max-width: 600px) {
      .topnav a:not(:first-child) {
        display: none;
      }

      .topnav a.icon {
        float: right;
        display: block;
      }
    }

    @media screen and (max-width: 600px) {
      .topnav.responsive {
        position: relative;
      }

      .topnav.responsive .icon {
        position: absolute;
        right: 0;
        top: 0;
      }

      .topnav.responsive a {
        float: none;
        display: block;
        text-align: left;
      }
    }

    .showcase-gradient {
      background: linear-gradient(to bottom, #ff7e5f, #feb47b);
      color: #fff;
      padding: 5rem 0;
    }

    .btn-gradient:hover {
      background: linear-gradient(to right, #2a5298, #1e3c72);
    }

    .upcoming-events-gradient {
      background: linear-gradient(to bottom right, #2a5298, #1e3c72);
      color: #fff;
      padding: 5rem 0;
    }

    .newsletter {
      background-color: #ffcc00;
      color: #333;
      padding: 5rem 0;
    }

    .pagination {
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 1rem 0;
    }

    .pagination .page-link {
      margin: 0 5px;
      padding: 10px 15px;
      border: 1px solid #ddd;
      text-decoration: none;
      color: #333;
    }

    .pagination .page-link:hover {
      background-color: #ddd;
    }

    .bg-dark {
      background-color: #333 !important;
      color: #fff !important;
    }

    .bg-dark-transparent {
      background-color: rgba(0, 0, 0, 0.7);
      color: #fff;
    }

    .form-label {
      color: #fff;
      background-color: rgba(0, 0, 0, 0.5);
      padding: 5px;
      border-radius: 5px;
    }

    .form-control {
      background-color: rgba(255, 255, 255, 0.8);
      color: #333;
    }

    .form-control::placeholder {
      color: #666;
    }

    /* Custom card border color */
    .custom-card {
      border: 2px solid #128189; /* Change this color to your desired outline color */
    }
  </style>
  <title>Welcome to JSEA</title>
</head>
<body>
  <!-- Navigation -->
  <div class="topnav" id="myTopnav">
    {{#unless flag}}
    <a href="./home">Home</a>
    {{else}}
    <a href="../private/Userhome">Home</a>
    {{/unless}}
    <a href="./popularEvents" class="active">Get the Top Events</a>
    <a href="./searchEvents">Search an Event</a>
    {{#unless flag}}
    <a href="../private/register">Register</a>
    <a href="../private/login">Login</a>
    {{else}}
    <a href="../private/logout" onclick="confirm('Are you sure you want to log out?')">Logout</a>
    {{/unless}}
    <a href="javascript:void(0);" class="icon" onclick="toggleNav()">
      <i class="fa fa-bars"></i>
    </a>
  </div>

  <!-- Search Form -->
  <form action="./popularEvents" method="GET" id="searchForm" class="bg-dark text-light p-3">
    <div class="container">
      <div class="row">
        <div class="col">
          <input type="number" id="limit" name="limit" value="{{limitQueryParam}}" class="form-control" placeholder="Enter limit">
        </div>
        <div class="col">
          <input type="number" id="page" name="page" class="form-control" placeholder="Enter page">
        </div>
        <div class="col">
          <button type="submit" class="btn btn-outline-primary">Search</button>
        </div>
      </div>
    </div>
  </form>

  <!-- Event List -->
  <section class="bg-dark text-dark p-5">
    <div class="container mt-5">
      <div class="row row-cols-1 row-cols-md-3 g-4">
        {{#each popularEvents}}
        <div class="col mb-4">
          <div class="card custom-card bg-transparent p-4 h-100 d-flex flex-column">
            <div class="card-body">
              <h3 class="card-title">{{this.eventName}}</h3>
              <p class="card-text text-muted">Date: {{this.eventDate}}</p>
              <div class="mt-auto">
                <a href="/site/public/oneEvent/{{this.EventId}}" class="btn btn-primary">Details</a>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </section>

 <!-- Pagination -->
  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
      <li class="page-item">
        <a class="page-link" href="#" id="prevPage" onclick="prevPage()">&lt; Previous</a>
      </li>
      {{#each pages}}
      <li class="page-item"><a class="page-link" href="./searchEvents?page={{this.number}}" onclick="updateContent({{this.number}})">{{this.number}}</a></li>
      {{/each}}
      <li class="page-item">
        <a class="page-link" href="#" id="nextPage" onclick="nextPage()">Next &gt;</a>
      </li>
    </ul>
  </nav>

  <script>
    const totalPages = 99;

    function getQueryParam(name) {
      const urlParams = new URLSearchParams(window.location.search);
      return urlParams.get(name);
    }

    const pageQueryParam = getQueryParam('page');
    let currentPage = pageQueryParam ? parseInt(pageQueryParam) : 1;
    let limitQueryParam = getQueryParam('limit');
    let eventNameQueryParam = getQueryParam('eventName');

    function updateContent(page) {
      console.log(`Fetching content for page ${page}`);
      window.location.href = `./searchEvents?page=${page}&limit=${limitQueryParam}&eventName=${eventNameQueryParam}`;
    }

    function nextPage() {
      if (currentPage < totalPages) {
        currentPage++;
        updateContent(currentPage);
      }
    }

    function prevPage() {
      if (currentPage > 1) {
        currentPage--;
        updateContent(currentPage);
      }
    }

    function toggleNav() {
      var x = document.getElementById("myTopnav");
      if (x.className === "topnav") {
        x.className += " responsive";
      } else {
        x.className = "topnav";
      }
    }
  </script>
</body>
</html>
