    <a href="../../public/home" onclick="confirm('Bro finalmente vais sair\n espero que nao venhas mais\n mas lembra te mesmo ao sair daqui\n es incrivel')">Logout</a>
  </div>

  <div style="padding-left:16px">
    <h2>Welcome Back</h2>
    <p>welcum OBAMA</p>
  </div>


</body>


<h1>Group {{oneGroup.name}}</h1>
<ul>
    {{#if oneGroup.description}}
    <li>
    <h2>Groups description: {{oneGroup.description}}</h2>
    </li>
    {{/if}}
    {{#if oneGroup.events}}
    <ul>
        <form action="../removeEvent/{{groupId}}" method="POST">
            <select name="eventId">
            <option selected disabled>Choose a group</option>
                {{#each oneGroup.events}}
            <option value="{{@index}}" selected>{{this.name}}</option>
                {{/each}}
            </select>
            <!-- <input type="hidden" name="groupId" value="{{oneGroup.id}}"> -->
            <!-- <input type="hidden" name="eventId" value="{{this.id}}"> -->
            <input type="submit" value="Remove Event" id="buttonRemove">
        </form>
    </ul>
    <li>
        <h2>Events:</h2>
        <ul>
            {{#each oneGroup.events}}
            <li>
                <form action="../../public/oneEvent/{{this.id}}" method="GET">
                  <input type="hidden" name="name" value="{{this.name}}">
                  <h2>
                      <button type="submit" style="border: none; background-color: transparent; cursor: pointer;"><h2>{{this.name}}</h2></button>
                  </h2>
                </form>
                <h2>{{this.date}}</h2>
                <h2>{{this.genre}}</h2>
                <h2>{{this.segment}}</h2>
                <img src="{{this.image}}"></img>
            </li>
            {{/each}}
            <h3> Go add more dumbasss</h3>
        </ul>
    {{else}}
        <p>Go add groups </p>
    {{/if}}
</ul>

</html>