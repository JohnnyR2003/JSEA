                    <input type="hidden" value="{{this.name}}">
                    <h2>
                        <button type="submit" style="font-size: 25px; border: none; background-color: transparent; cursor: pointer;">{{this.name}}</button>
                    </h2>
                </form>
                <p>{{this.description}}</p>
                <form method="GET" action="./edit/{{this.id}}">
